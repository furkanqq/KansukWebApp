@model KansukWebApp.ViewModels.AssignmentVM

@{
    ViewData["Title"] = Model.Assignment.Id == 0 ? "Yeni Zimmet Girişi" : "Zimmet Güncelleme";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Upsert" method="post">
            <input type="hidden" asp-for="Assignment.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Assignment.UserId" class="control-label">Personel Seçiniz</label>
                <select asp-for="Assignment.UserId" asp-items="@Model.UserList" class="form-select">
                    <option disabled selected>-- Personel Seçiniz --</option>
                </select>
                <span asp-validation-for="Assignment.UserId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Assignment.ItemType" class="control-label">Zimmet Türü (Telefon, Tablet, Hat)</label>
                <input asp-for="Assignment.ItemType" class="form-control" />
                <span asp-validation-for="Assignment.ItemType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Assignment.Description" class="control-label">Açıklama / Detay</label>
                <textarea asp-for="Assignment.Description" class="form-control"></textarea>
                <span asp-validation-for="Assignment.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}