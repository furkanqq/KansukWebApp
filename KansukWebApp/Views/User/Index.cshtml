@model IEnumerable<KansukWebApp.Models.User>

@{
    ViewData["Title"] = "Personel Listesi";
}

<h2>Personel Listesi</h2>
<hr />

<p>
    <a asp-action="Upsert" class="btn btn-primary">Yeni Personel Ekle</a>
</p>

<table class="table table-responsive-md table-striped">
    <thead>
        <tr>
            <th>Ad-Soyad</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@(item.Status ? "Aktif" : "Pasif")</td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-sm btn-success">Güncelle</a>

                    <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>